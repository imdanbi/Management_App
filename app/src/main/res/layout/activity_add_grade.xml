<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_grade_activity"
    android:background="#90D0E7"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="학점 계산기"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="3sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#FF88C7F8"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="과목명"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="성적"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="168dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="학점"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90D0E7"
        android:padding="16dp"
        >


        <TableRow>

            <EditText
                android:id="@+id/subject1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                />

            <Spinner

                android:entries="@array/gradegrade"
                android:id="@+id/spin1"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"


                />

            <EditText
                android:id="@+id/count1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                />


        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/subject2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                />

            <Spinner

                android:entries="@array/gradegrade"
                android:id="@+id/spin2"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                />

            <EditText
                android:id="@+id/count2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                />

        </TableRow>


        <TableRow>

            <EditText
                android:id="@+id/subject3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                />

            <Spinner

                android:entries="@array/gradegrade"
                android:id="@+id/spin3"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                />

            <EditText
                android:id="@+id/count3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                />

        </TableRow>


        <TableRow>

            <EditText
                android:id="@+id/subject4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                />

            <Spinner

                android:entries="@array/gradegrade"
                android:id="@+id/spin4"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                />

            <EditText
                android:id="@+id/count4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                />

        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/subject5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                />

            <Spinner

                android:entries="@array/gradegrade"
                android:id="@+id/spin5"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                />

            <EditText
                android:id="@+id/count5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                />

        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/subject6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                />

            <Spinner

                android:entries="@array/gradegrade"
                android:id="@+id/spin6"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                />

            <EditText
                android:id="@+id/count6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                />

        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/subject7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                />

            <Spinner

                android:entries="@array/gradegrade"
                android:id="@+id/spin7"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                />

            <EditText
                android:id="@+id/count7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                />

        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/subject8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                />

            <Spinner

                android:entries="@array/gradegrade"
                android:id="@+id/spin8"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"


                />

            <EditText
                android:id="@+id/count8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                />

        </TableRow>




        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            >

            <Button
                android:id="@+id/grade_cal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="onClickCaleBtn"
                android:text="학점 계산"
                android:textStyle="bold"
                android:backgroundTint="#FF88C7F8"
                android:textSize="18dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="onClickResetBtn"
                android:text="초기화"
                android:textStyle="bold"
                android:backgroundTint="#FF88C7F8"
                android:textSize="18dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="15dp"
                android:text="이수 학점"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/goal"
                />

            <TextView
                android:id="@+id/goal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:weightSum="10"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="15dp"
                android:text="학점 평균"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/write1"
                />

            <TextView
                android:id="@+id/write2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0.0"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </TableRow>





    </TableLayout>

</LinearLayout>


























